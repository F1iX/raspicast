<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="RaspicastTheme.HoloDark"/>
    
    <dimen name="dialog_padding_top">0dp</dimen>
    <dimen name="queue_item_text_size">16sp</dimen>
    <dimen name="queue_size">240dp</dimen>
    <dimen name="main_margin">11dp</dimen>
    
    <style name="NoConOverlay">
    	<item name="android:windowContentOverlay">@null</item>
	</style>

    <style name="RaspicastTheme.HoloLight" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@drawable/holo_light_background</item>
        <item name="android:dialogTheme">@style/LightDialogTheme</item>
        <item name="colorPrimary">#A8322A</item>
        <item name="android:alertDialogStyle">@style/LightDialogTheme</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/LightOverFlow</item>
        <item name="android:editTextStyle">@style/LightEditText</item>
        <item name="android:textColorHighlight">#99A8322A</item>
        <item name="android:activatedBackgroundIndicator">@drawable/apptheme_activated_background_holo_light</item>
        <item name="android:textColorLink">#B7463C</item>
        <item name="android:seekBarStyle">@style/LightSeekBar</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:actionBarStyle">@style/LightActionBar</item>
        <item name="menuIconPlay">@drawable/ic_action_play_dark</item>
        <item name="menuIconStop">@drawable/ic_action_stop_dark</item>
        <item name="iconPause">@drawable/ic_action_pause_dark</item>
        <item name="iconForward">@drawable/ic_action_forward_dark</item>
        <item name="iconBackward">@drawable/ic_action_backward_dark</item>
        <item name="iconUp">@drawable/ic_action_up_light</item>
        <item name="iconRepeat">@drawable/ic_action_repeat_dark</item>
        <item name="vcntrl_background">#00594E</item>
        <item name="vcntrl_seekbar_style">@style/DarkVcntrlSeekBar</item>
        <item name="vcntrl_divider">@drawable/video_cntrl_divider_light</item>
        <item name="queue_divider">?android:attr/dividerVertical</item>
        <item name="icon_empty">@drawable/ic_action_empty_light</item>
        <item name="vcntrl_divider_height">6dp</item>
        <item name="dir_nav_view_color">#F0F0F0</item>
        <item name="dir_nav_view_divider">@drawable/current_folder_divider</item>
        <item name="queue_background_color">#ffFFFFFF</item>
        <item name="vcntrl_divider_height_neg">-6dp</item>
        <item name="highlight_color">#00796B</item>
        <item name="themeName">light</item>
    </style>

    <style name="RaspicastTheme.HoloDark" parent="android:Theme.Holo">
        <item name="android:activatedBackgroundIndicator">@drawable/apptheme_activated_background_holo_dark</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:windowBackground">@drawable/material_dark_background</item>
        <item name="android:actionOverflowButtonStyle">@style/LightOverFlow</item>
        <item name="android:dialogTheme">@style/DarkDialogTheme</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
        <item name="colorPrimary">#150C3F</item>
        <item name="menuIconPlay">@drawable/ic_action_play_dark</item>
        <item name="menuIconStop">@drawable/ic_action_stop_dark</item>
        <item name="iconPause">@drawable/ic_action_pause_dark</item>
        <item name="iconForward">@drawable/ic_action_forward_dark</item>
        <item name="iconBackward">@drawable/ic_action_backward_dark</item>
        <item name="iconUp">@drawable/ic_action_up_dark</item>
        <item name="iconRepeat">@drawable/ic_action_repeat_dark</item>
        <item name="vcntrl_background">#150C3F</item>
        <item name="vcntrl_seekbar_style">@style/DarkVcntrlSeekBar</item>
        <item name="vcntrl_divider">@drawable/video_cntrl_divider_dark</item>
        <item name="icon_empty">@drawable/ic_action_empty_dark</item>
        <item name="vcntrl_divider_height">2dp</item>
        <item name="vcntrl_divider_height_neg">-2dp</item>
        <item name="queue_background_color">#212121</item>
        <item name="queue_divider">?android:attr/dividerVertical</item>
        <item name="dir_nav_view_color">#3A888888</item>
        <item name="dir_nav_view_divider">@drawable/current_folder_divider_dial</item>
        <item name="highlight_color">#FB8C00</item>
        <item name="themeName">dark</item>
    </style>

    <style name="DarkActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@drawable/raspicast_logo_white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:height">56dp</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>
    
    <style name="DarkDialogTheme" parent="android:Theme.Holo.Dialog">
 	    <item name="android:textColorHighlight">#66FB8C00</item>
 	    <item name="android:textColorLink">?attr/highlight_color</item>
	</style>
	
    <style name="LightActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:icon">@drawable/raspicast_logo_white</item>
        <item name="android:height">56dp</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

 	<style name="LightDialogTheme" parent="android:Theme.Holo.Light.Dialog">
 	    <item name="android:textColorHighlight">#99A8322A</item>
 	    <item name="android:textColorLink">?attr/highlight_color</item>
 	    <item name="android:editTextStyle">@style/LightEditText</item>
 	    <item name="android:seekBarStyle">@style/LightSeekBar</item>
		<item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light</item>
    	<item name="android:listChoiceIndicatorSingle">@drawable/apptheme_btn_radio_holo_light</item>
	</style>

 	<style name="LightSeekBar" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_light</item>
      <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_light</item>
      <item name="android:thumb">@drawable/scrubber_control_selector_light</item>
  </style>
  
 	<style name="DarkVcntrlSeekBar" parent="android:Widget.Holo.SeekBar">
      <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_dark</item>
      <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_dark</item>
      <item name="android:thumb">@drawable/scrubber_control_selector_dark</item>
  </style>
  
  <style name="LightEditText" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
  </style>
  
<style name="LightPopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_panel_light</item> 
</style>

  <style name="LightOverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    
  	<style name="ActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
    	<item name="android:minWidth">57dip</item>
	</style>

    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>
 	
  	

</resources>